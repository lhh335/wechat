/* components/itemBar/itemBar.wxss */
.flex-wrap {
  width: 100%;
  height: 50px;
  background: #fff;
  border-bottom: 0.5px solid #f5f5f5;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 14px;
  box-sizing: border-box;
  padding: 0px 14px;
}

.item {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 10px;
  box-sizing: border-box;
}
.avatar {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.title-item {
  height: 100%;
  line-height: 50px;
}

.value-item {
  flex: 1;
  height: 100%;
  line-height: 50px;
  color: #333;
  text-align: right;
}

.defaultValue-item {
  flex: 1;
  height: 100%;
  line-height: 50px;
  color: #e6e6e6;
  text-align: right;
}

.arrow {
  width: 6px;
  height: 16px;
}


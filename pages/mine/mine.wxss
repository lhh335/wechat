.mine-container {
  background-color: #eee;
  height: 100%;
  width: 100%;
}

.mine-header {
  width: 100%;
  height: 60px;
  background-color: #197FC3;
  display: flex;
  align-items: center;
  padding: 0px 14px;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  flex: 1;
}

.arrow {
  width: 8px;
  height: 16px;
}

.gap-gray {
  width: 100%;
  height: 10px;
  background: #f7f7f7;
}

.item-wrap {
  width: 100%;
  height: auto;
  background: #fff;
}

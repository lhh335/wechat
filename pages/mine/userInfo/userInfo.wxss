.mine-container {
  background-color: #eee;
  height: 100%;
  width: 100%;
}

.mine-header {
  width: 100%;
  height: 60px;
  background-color: #197FC3;
  display: flex;
  align-items: center;
  padding: 0px 14px;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  flex: 1;
}

.arrow {
  width: 8px;
  height: 16px;
}

.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,
.pause,
.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  line-height: 50px;
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}

/**mark.wxss**/

.containers {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  width: 100%;
  height: auto;
  background-color: #f7f7f7;
  flex-wrap: wrap;
  padding: 0rpx 14rpx;
  cursor: pointer;
  box-sizing: border-box;
}

.item-box {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0rpx;
}
.label-text {
  font-size: 24rpx;
  color: #333;
}

.icon-img {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 5rpx;
}